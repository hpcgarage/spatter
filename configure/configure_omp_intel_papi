# Configure file for compiling with ICC and include Papi
# Execute from the main directory using ./configure/configure_<compiler_platform>

BUILD_DIR=build_omp_intel_papi

mkdir -p ${BUILD_DIR} && cd ${BUILD_DIR}
rm -rf CMake* 

#Make sure to use tabs rather than spaces for newline entries
cmake -D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_C_COMPILER=icc \
	-D CMAKE_CXX_COMPILER=icpc \
	-D CMAKE_CXX_FLAGS="-O3" \
	-D USE_OPENCL=0 \
	-D USE_OPENMP=1 \
	-D USE_CUDA=0 \
	-D USE_PAPI=1 \
	-D PAPI_PREFIX=/opt/papi \
	..    

#Unused options
#      -D USE_KOKKOS=0 -D KOKKOS_DIRECTORY=${KOKKOS_DIR}   \
#      -D KOKKOS_WRAPPER=${KOKKOS_DIR}/bin/nvcc_wrapper    \
#      -D USE_CUDA=0 -D CUDA_FLAGS="-arch sm_70"           \
